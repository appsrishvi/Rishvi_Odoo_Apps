<odoo>
    <data noupdate="1">
        <record id="ir_cron_daily_timesheet_report" model="ir.cron">
            <field name="name">Daily Timesheet Email</field>

            <!-- link to a tiny server‑action on‑the‑fly -->
            <field name="model_id" ref="base.model_ir_actions_server"/>
            <field name="state">code</field>
            <field name="code">
                env['timesheet.daily.mail'].send_daily_email()
            </field>

            <!-- run every day at 23:30 -->
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>

